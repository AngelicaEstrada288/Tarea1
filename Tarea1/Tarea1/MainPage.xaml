<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1.MainPage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Datos de la persona."></Label>

            <Entry x:Name="txtnombre" Placeholder="Ingrese su nombre. " Keyboard="Text"/>

            <Entry x:Name="txtapellidos" Placeholder="Ingrese su apellido. " Keyboard="Text"/>

            <Entry x:Name="txtedad" Placeholder="Ingrese su edad. " Keyboard="Text"/>

            <Entry x:Name="txtcorreo" Placeholder="Ingrese su correo. " Keyboard="Text"/>



            <Button x:Name="btnenviarinformacion" Text="Enviar Informacion" Clicked="btnenviarinformacion_Clicked"/>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>
